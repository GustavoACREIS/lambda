<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.v1.novo_vip.View.MainActivity">

    <TextView

        android:id="@+id/Credencial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:text="Credencial de Acesso"
        android:textSize="36dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="NOME"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="NOME" />

    <EditText
        android:id="@+id/digitNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:enabled="false"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
       />

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="EMAIL"
        android:textColor="#ED78E14B"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="EMAIL" />

    <EditText

        android:id="@+id/digitEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:ems="10"

        android:hint="Digite seu Email..."
        android:inputType="textEmailAddress" />

    <TextView

        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="SENHA-"
        android:textColor="#ED78E14B"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="SENHA" />

    <EditText

        android:id="@+id/digitPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="Digite sua senha.."
        android:inputType="numberPassword" />

    <TextView

        android:id="@+id/repitPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="REPITA "
        android:textColor="#ED78E14B"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="REPITA " />

    <EditText

        android:id="@+id/digitPass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="Confirme sua senha..."
        android:inputType="numberPassword" />

    <CheckBox

        android:id="@+id/ckterm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:onClick="validartermo"
        android:layout_marginTop="8dp"
        android:text="LEIA OS TERMOS"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#ED78E14B"
        android:textStyle="bold|italic"
        tools:text="LEIA OS TERMOS" />

    <Button
        android:id="@+id/btncadast"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="CADASTRAR"
        tools:text="CADASTRAR" />

    <Button

        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Voltar"
        tools:text="Voltar" />

</androidx.appcompat.widget.LinearLayoutCompat>